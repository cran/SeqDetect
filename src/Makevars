PKG_CXXFLAGS = -I./ETT
PKG_LIBS = -L./ETT -lSETT
CLEANEXTS = o a 

all: $(SHLIB)
shlib-clean: clean
$(SHLIB): CETT/libSETT.a

CETT/libSETT.a:
	$(info ** Building ETT library)
	@(cd ETT && $(MAKE) CXX="$(CXX)" CXXFLAGS="$(CXXFLAGS) $(CXXPICFLAGS)" AR="$(AR)" RANLIB="$(RANLIB)" lib_ett)
	
clean: 
	$(info ** Cleaning)
	for file in $(CLEANEXTS); do rm -f *.$$file; done
	@(cd ETT && $(MAKE) clean)
